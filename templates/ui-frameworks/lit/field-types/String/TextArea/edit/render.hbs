<label for="{{label}}">{{label}}</label>
{{#if (eq cardinality "vector")}}
<textarea
  .key=${ {{key}} }
  name="{{label}}"
  {{#if variable_to_read}}
  .value=${ {{variable_to_read}} }
  {{/if}}
  @change=${(e: CustomEvent) => {
     {{variable_to_change}} = {{variable_to_change}}.map((v, idx) => {
      if ({{key}} == idx) {
        v = (e.target as any).value;
      }
      return v;
    });
  } }
  {{#if required}}
  required
  {{/if}}
></textarea>
{{else}}
<textarea
  name="{{label}}"
  {{#if variable_to_read}}
  .value=${ {{variable_to_read}} }
  {{/if}}
  @change=${(e: CustomEvent) => { {{variable_to_change}} = (e.target as any).value;} }
  {{#if required}}
  required
  {{/if}}
></textarea>
{{/if}}