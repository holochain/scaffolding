<label for="{{label}}">{{label}}</label>
{{#if (eq cardinality "vector")}}
<input
  .key=${ {{key}} }
  type="checkbox"
  name="{{label}}"
  .checked=${ {{variable_to_read}} }
  @change=${(e: CustomEvent) => {
    {{variable_to_change}} = {{variable_to_change}}.map((v, idx) => {
      if ({{key}} == idx) {
        v = (e.target as any).checked;
      }
      return v;
    });
  } }
>
{{else}}
<input
  type="checkbox"
  name="{{label}}"
  .checked=${ {{variable_to_read}} }
  @change=${(e: CustomEvent) => { {{variable_to_change}} = (e.target as any).checked;} }
>
{{/if}}