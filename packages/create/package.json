    "sass": "~1.32",
    "sass-loader": "^10.0.0",
    "semver": "^7.3.5",
    "socket.io": "^4.4.0",
    "stream": "^0.0.2",
    "ts-loader": "^8.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^4.4.3",
    "utf-8-validate": "^5.0.5",
    "webpack": "^4.36.0",
    "webpack-cli": "^4.8.0",
    "webpack-path-resolve": "^0.0.3"
  }
}
