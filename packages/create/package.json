{
  "name": "@holochain/create",
  "version": "0.0.34",
  "description": "Rapid Application Development tools to build Holochain apps",
  "author": "guillem.cordoba@gmail.com",
  "scripts": {
    "start": "npm run build && concurrently \"webpack --config webpack.config.js --watch --mode development\" \"nodemon --config ./nodemon.config.json\" --raw",
    "build": "rimraf dist fixture && webpack --config webpack.config.js && chmod +x dist/app.js",
    "test": "rimraf fixture && npm run build && node ./dist/app.js init fixture && cd fixture && nix-shell . --run \"npm i && npm t && npm run package\" && rimraf fixture"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/app.js",
  "bin": "./dist/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/holochain/scaffolding"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@holochain-scaffolding/events": "0.0.1",
    "@holochain-scaffolding/ui": "0.0.1",
    "@mdi/font": "5.9.55",
    "@source-craft/fs": "0.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/prompts": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-loader": "^8.2.2",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "bufferutil": "^4.0.3",
    "chalk": "^4.1.2",
    "clear-npx-cache": "^1.0.1",
    "concurrently": "^6.2.1",
    "copy-webpack-plugin": "^6.4.1",
    "core-js": "^3.6.5",
    "deepmerge": "^4.2.2",
    "diff": "^5.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "express": "^4.17.1",
    "gh-pages": "^3.2.3",
    "node-fetch": "^3.0.0",
    "nodemon": "^2.0.4",
    "open": "^8.2.1",
    "path": "^0.12.7",
    "prettier": "^1.19.1",
